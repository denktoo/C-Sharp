@model FitTrack.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-4" data-bind="with: loginViewModel">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>

            <form data-bind="submit: function(data, event) { login(event) }">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input id="Email" class="form-control" data-bind="value: email" />
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input id="Password" class="form-control" type="password" data-bind="value: password" />
                </div>
                <div class="mt-3">
                    <button data-bind="click: login" type="submit" class="btn btn-primary btn-block">Login</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a href="/Account/Register">Don't have an account? Register</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/knockout/build/output/knockout-latest.js"></script>
<script src="~/js/Login.js" asp-append-version="true"></script>