@{
    ViewData["Title"] = "Register";
}

<div class="container mt-4" data-bind="with: registerViewModel">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Register</h2>

            <form data-bind="submit: function(data, event) { register(event) }">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" class="form-control" type="text" data-bind="value: username" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" class="form-control" type="email" data-bind="value: email" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" class="form-control" type="password" data-bind="value: password" />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a href="/Account/Login">Already have an account? Login</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/knockout/build/output/knockout-latest.js"></script>
<script src="~/js/Register.js" asp-append-version="true"></script>