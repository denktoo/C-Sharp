@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4 ps-3 ps-md-4 ps-lg-5">
    <h2>Admin Dashboard</h2>

    <!-- Dashboard Statistics Section -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5>Total Users</h5>
                    <h3 data-bind="text: totalUsers"></h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5>Workouts Logged</h5>
                    <h3 data-bind="text: totalWorkouts"></h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5>Goals Achieved</h5>
                    <h3 data-bind="text: goalsAchieved"></h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5>Pending Goals</h5>
                    <h3 data-bind="text: pendingGoals"></h3>
                </div>
            </div>
        </div>
    </div>

    <!-- User Management Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5>Manage Users</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Workouts</th>
                                    <th>Goals Achieved</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: users">
                                <tr>
                                    <td data-bind="text: id"></td>
                                    <td data-bind="text: name"></td>
                                    <td data-bind="text: email"></td>
                                    <td data-bind="text: workoutsCount"></td>
                                    <td data-bind="text: goalsAchievedCount"></td>
                                <td>
                                    @* <a href="#" data-bind="click: function() { $parent.fetchUserDetails(id); }" class="btn btn-primary btn-sm">View</a> *@
                                    @* <a data-bind="attr: { href: '/Admin/DeleteUser/' + id }" class="btn btn-danger btn-sm">Delete</a> *@
                                </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Workouts and Goals Overview -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Recent Workouts</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Date</th>
                                <th>Duration (mins)</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: recentWorkouts">
                            <tr>
                                <td data-bind="text: userName"></td>
                                <td data-bind="text: date"></td>
                                <td data-bind="text: duration"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Recent Goals</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Description</th>
                                <th>Target Date</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: recentGoals">
                            <tr>
                                <td data-bind="text: userName"></td>
                                <td data-bind="text: description"></td>
                                <td data-bind="text: targetDate"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/knockout/build/output/knockout-latest.js"></script>
<script src="~/js/Admin.js" asp-append-version="true"></script>