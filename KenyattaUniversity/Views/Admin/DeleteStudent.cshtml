@model KenyattaUniversity.Models.User

<h2>Edit Course - @Model.Username</h2>

<form asp-action="DeleteStudent" method="post" class="w-25">
    @Html.HiddenFor(m => m.SchoolID)

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Delete Student</button>
</form>

<div class="mt-3">
    <a asp-action="Dashboard">Back to Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}