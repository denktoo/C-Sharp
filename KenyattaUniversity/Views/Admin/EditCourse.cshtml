@model KenyattaUniversity.Models.Course

<h2 class="ps-lg-5">Edit Course - @Model.Title</h2>

<form asp-action="UpdateCourse" method="post" class="w-50 ps-lg-5">
    @Html.HiddenFor(m => m.CourseID)

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Credits"></label>
        <input asp-for="Credits" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update Course</button>
</form>

<div class="mt-3 ps-lg-5">
    <a asp-action="Dashboard">Back to Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}