@model KenyattaUniversity.Models.User

<h2>Edit Student - @Model.Username</h2>

<form asp-action="UpdateStudent" method="post" class="w-25">
    @Html.HiddenFor(s => s.SchoolID)

    <div class="form-group">
        <label for="SchoolID">School ID</label>
        <input id="SchoolID" value="@Model.SchoolID" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <!-- Hidden field for Password -->
    <input type="hidden" asp-for="Password" id="Password" />

    <button type="submit" class="btn btn-primary">Update Student</button>
</form>

<div class="mt-3">
    <a asp-action="Dashboard">Back to Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- JavaScript to dynamically set the Password field -->
<script src="~/js/password.js" asp-append-version="true"></script>