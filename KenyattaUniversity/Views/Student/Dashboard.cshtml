@model KenyattaUniversity.ViewModels.StudentDashboardViewModel

<h2>Welcome, @Model.User.Username</h2>

<h3>Your Information</h3>
<p><strong>Student ID:</strong> @Model.User.SchoolID</p>
<p><strong>Email:</strong> @Model.User.Email</p>

<h3>Your Enrollments</h3>
<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Title</th>
            <th>Credits</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            foreach (var enrollment in Model.Enrollments)
            {
                <tr>
                    <td>@enrollment.Course.CourseID</td>
                    <td>@enrollment.Course.Title</td>
                    <td>@enrollment.Course.Credits</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">You are not enrolled in any courses.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}